<%- include('../header'); %>

    <div class="d-flex  w-100" id="wrapper">
      <div class="border-end bg-white" id="sidebar-wrapper">
          <a href="/" class="text-dark text-decoration-none">
            <div class="sidebar-heading border-bottom bg-light fw-bold">BakeryApp</div>
          </a>
          <%- include('../menu'); %>
      </div>
      <!-- Page content wrapper-->
      <div id="page-content-wrapper">
          <!-- Top navigation-->
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
              <div class="container-fluid">
                  <button class="btn btn-piekarnia me-auto" id="sidebarToggle">Rozwijane Menu</button>
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                          <li class="nav-item"> Zalogowany jako: <%= user.username %></li>
                      </ul>
                  </div>
              </div>
          </nav>
          <!-- Page content-->

          <div class="container-fluid">

              
              
              <div class="my-3 p-3 bg-body rounded shadow-sm">
                  <p class="lead fw-bold border-bottom pb-2 mb-0">Zamówienia</p>
                  <% orders.forEach(function(order){ %>

                <div class="d-flex text-muted py-4 px-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#A8A891" class="pb-2 bi bi-bag-fill" viewBox="0 0 16 16">
                        <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
                    </svg>
                    <div class="ps-3 pb-3 mb-0 small lh-sm border-bottom w-100">
                        <div class="d-flex justify-content-between">
                        <strong class="text-gray-dark">Zamówienie nr: <%= order.id %> - <%= order.product %></strong>
                        <% if (order.status === "zrealizowane") { %>
                            <span class="text-success"> Status: <%= order.status %> </span>
                        <% } else if (order.status === "w trakcie zrealizacji") { %>
                            <span class="text-primary"> Status: <%= order.status %> </span>
                        <% } else if (order.status === "anulowane") { %>
                            <span class="text-danger"> Status: <%= order.status %> </span>
                        <% } else { %>
                            <span> Status: <%= order.status %> </span>
                        <% } %>
                        <a type="button" href="/zamowienia/zamowienie_<%= order.id %>" class="btn btn-sm btn-secondary">Zobacz szczegóły</a>
                        </div>
                        <div class="d-flex flex-row gap-3 mt-3">
                            <p>
                                Data złożenia
                                <span class="d-block"><%= order.date_placing_order.getDate()%>-<%= order.date_placing_order.getMonth()+1%>-<%= order.date_placing_order.getFullYear()%></span>
                                <span class="d-block"><%= order.time_placing_order.getHours()%>:<%= order.time_placing_order.getMinutes()%></span>
                            </p>
                            <p>
                                Data odbioru
                                <span class="d-block"><%= order.date_receipt_order.getDate()%>-<%= order.date_receipt_order.getMonth()+1%>-<%= order.date_receipt_order.getFullYear()%></span>
                                <span class="d-block"><%= order.time_receipt_order.substr(0, 5)%></span>
                            </p>

                        </div>
                    </div>
                </div>

                <% }); %>
              </div>
          </div>
      </div>
  </div>


<%- include('../footer'); %>