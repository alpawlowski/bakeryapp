<%- include('../header'); %>

    <div class="d-flex  w-100" id="wrapper">
      <div class="border-end bg-white" id="sidebar-wrapper">
          <a href="/" class="text-dark text-decoration-none">
            <div class="sidebar-heading border-bottom bg-light fw-bold">BakeryApp</div>
          </a>
          <%- include('../menu'); %>
      </div>
      <!-- Page content wrapper-->
      <div id="page-content-wrapper">
          <!-- Top navigation-->
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
              <div class="container-fluid">
                  <button class="btn btn-piekarnia me-auto" id="sidebarToggle">Rozwijane Menu</button>
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                          <li class="nav-item"> Zalogowany jako: <%= user.username %></li>
                      </ul>
                  </div>
              </div>
          </nav>
          <!-- Page content-->

          <div class="container-fluid">
 
            <div class="my-3 p-3 bg-body rounded shadow-sm">
                <div class="d-flex gap-3 d-md-flex border-bottom">
                    <p class="lead fw-bold pb-2 mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#A8A891" class="pb-2 bi bi-bag-fill" viewBox="0 0 16 16">
                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
                        </svg>
                        Produkty
                    </p>
                </div>
                <div class="d-flex gap-3 align-items-end justify-content-end w-100 my-3 pb-3 border-bottom">
                    <a href="/logowanie" type="button" class="btn btn-sm btn-outline-piekarnia my-auto px-4">Dodaj nowy produkt do bazy</a>
                </div>


            <% if (user.position === "Kierownik") { %>
              <h1 class="h3 my-4 mt-5 fw-normal text-center">Dodawanie nowego produktu do systemu</h1>
                <main class="p-5 pt-4 col-6 mx-auto">
                    <% if (typeof error != 'undefined') { %>
                        <% if (error) { %>
                            <p class="lead fw-normal text-danger"><%= error %></p>
                        <% } %>
                    <% } %>
                    <form method="post" action="/produkty/dodaj">
                        <div class="form mt-3">
                            <label for="name">Nazwa produktu</label>
                            <input type="text" class="form-control mt-1" name="name" id="name" placeholder="Nazwa produktu">
                        </div>
                        <div class="form mt-3">
                            <label for="price">Cena produktu</label>
                            <input type="number" class="form-control mt-1" name="price" min="0" max="999" step="0.1" id="price" placeholder="Cena produktu">
                        </div>
                        <div class="form mt-3">
                            <label for="count">Ilość produktu</label>
                            <input type="number" class="form-control mt-1" name="count" id="count" min="0" max="999" placeholder="Ilość produktu">
                        </div>
                        <div class="form mt-3">
                            <label for="expiration_date">Data ważności</label>
                            <input type="date" class="form-control mt-1" name="expiration_date" placeholder="Data ważności" required>
                        </div>

                        <label for="availability" class="mt-3">Dostępność:</label>
                        <select class="form-select mt-1" name="availability">
                            <option value="true">Dostępny</option>
                            <option value="false">Niedostępny</option>
                        </select>
                
                        <button class="w-100 btn btn-piekarnia my-4" type="submit">Dodaj produkt</button>
                    </form>
                </main>
                <% } else { %>
                    <h1 class="h3 my-4 mt-5 fw-normal text-center">Nie masz uprawnień</h1>
                <% } %>

            </div>
        </div>
      </div>
  </div>


<%- include('../footer'); %>