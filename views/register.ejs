<%- include('header'); %>

    <div class="d-flex  w-100" id="wrapper">
      <div class="border-end bg-white" id="sidebar-wrapper">
          <a href="/" class="text-dark text-decoration-none">
            <div class="sidebar-heading border-bottom bg-light fw-bold">BakeryApp</div>
          </a>
          <%- include('menu'); %>
      </div>
      <!-- Page content wrapper-->
      <div id="page-content-wrapper">
          <!-- Top navigation-->
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
              <div class="container-fluid">
                  <button class="btn btn-piekarnia me-auto" id="sidebarToggle">Rozwijane Menu</button>
                  <!-- <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button> -->
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                          <!-- <li class="nav-item"><a class="nav-link" href="/">Strona główna</a></li> -->
                          <!-- <li class="nav-item"><a class="nav-link" href="/wyloguj">Wyloguj</a></li> -->
                          <li class="nav-item"> Zalogowany jako: <%= user.login %></li>
                      </ul>
                  </div>
              </div>
          </nav>
          <!-- Page content-->

          <div class="container-fluid">
            <% if (user.position === "Kierownik") { %>
              <h1 class="h3 my-4 mt-5 fw-normal text-center">Rejestracja nowego użytkownika do systemu</h1>
                <main class="p-5 pt-4 col-6 mx-auto">
                    <% if (typeof error != 'undefined') { %>
                        <% if (error) { %>
                            <p class="lead fw-normal text-danger"><%= error %></p>
                        <% } %>
                    <% } %>
                    <form method="post" action="/rejestracja">
                
                    <div class="form">
                        <label for="login">Login</label>
                        <input type="text" class="form-control mt-1" name="login" id="login" placeholder="Login">
                    </div>
                    <div class="form mt-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control mt-1" name="email" id="email" placeholder="Email">
                    </div>
                    <div class="form mt-3">
                        <label for="password">Hasło</label>
                        <input type="password" class="form-control mt-1" name="password" id="password" placeholder="Hasło">
                    </div>
                    <div class="form mt-3">
                        <label for="username">Nazwa użytkownika</label>
                        <input type="text" class="form-control mt-1" name="username" id="username" placeholder="Nazwa użytkownika">
                    </div>
                    <label for="username" class="mt-3">Wybierz stanowisko pracy:</label>
                    <select class="form-select mt-1" name="position">
                        <option value="pracownik">Pracownik</option>
                        <option value="kierownik">Kierownik</option>
                    </select>
            
                    <button class="w-100 btn btn-piekarnia my-4" type="submit">Zarejestruj użytkownika</button>
                </form>
            </main>
            <% } else { %>
                <h1 class="h3 my-4 mt-5 fw-normal text-center">Nie masz uprawnień</h1>
            <% } %>
          </div>
      </div>
  </div>


<%- include('footer'); %>
